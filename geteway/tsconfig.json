{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,

    // ðŸ”½ Quyidagini qoâ€˜shamiz â€” aynan shu xatoni tuzatadi:
    "strictPropertyInitialization": false,

    // âœ… src ni alias sifatida ishlatish uchun
    "paths": {
      "src/*": ["./src/*"]
    },

    // ðŸ”½ Type declarationlarni yoâ€˜qotmaslik uchun
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
